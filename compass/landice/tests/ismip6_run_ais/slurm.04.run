#!/bin/bash
#SBATCH  --job-name={{ EXP }}
#SBATCH  --account=m1795
#SBATCH  --nodes=60
#SBATCH  --tasks-per-node=64
#SBATCH  --exclusive
#SBATCH  --time=12:00:00
#SBATCH  --qos=regular
#SBATCH  --constraint=haswell

LOGDIR=previous_logs_`date +"%Y-%m-%d_%H-%M-%S"`
mkdir $LOGDIR
cp log* $LOGDIR

source {{ LOAD_SCRIPT }}
date
srun -n 3840 --cpu-bind=cores --hint=multithread ./landice_model
date
