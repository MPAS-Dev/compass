<?xml version="1.0"?>
<config case="simulation">
	<add_link source="../initial_state/initial_state.nc" dest="init.nc"/>
	<add_link source="../initial_state/graph.info" dest="graph.info"/>

	<namelist name="namelist.ocean" mode="forward">
		<template file="template_forward.xml" path_base="script_configuration_dir"/>
		<template file="template_forward.xml" path_base="script_test_dir"/>
		<option name="config_run_duration">'00-00-10_00:00:00'</option>
		<option name="config_dt">'00:00:10'</option>
		<option name="config_time_integrator">'RK4'</option>
	</namelist>

	<streams name="streams.ocean" keep="immutable" mode="forward">
		<stream name="output">
			<attribute name="output_interval">00-00-00_01:00:00</attribute>
		</stream>
		<stream name="restart">
			<attribute name="output_interval">00-00-00_06:00:00</attribute>
		</stream>
		<template file="template_forward.xml" path_base="script_configuration_dir"/>
		<template file="template_forward.xml" path_base="script_test_dir"/>
	</streams>

	<run_script name="run.py">
		<step executable="gpmetis">
			<argument flag="graph.info">36</argument>
		</step>
		<model_run procs="36" threads="1" namelist="namelist.ocean" streams="streams.ocean"/>
	</run_script>
</config>
